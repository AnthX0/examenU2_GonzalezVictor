<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Principal">

    <ImageView
        android:id="@+id/ivTitulo"
        android:layout_width="292dp"
        android:layout_height="166dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="93dp"
        android:src="@drawable/grupo2"
        app:layout_constraintBottom_toTopOf="@+id/btnGlobos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDetalles"
        android:layout_width="242dp"
        android:layout_height="0dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/round_button"
        android:text="Detalles"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/btnPeluches"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGlobos" />

    <Button
        android:id="@+id/btnGlobos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/round_button"
        android:text="Globos"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/btnDetalles"
        app:layout_constraintEnd_toEndOf="@+id/btnDetalles"
        app:layout_constraintStart_toStartOf="@+id/btnDetalles"
        app:layout_constraintTop_toBottomOf="@+id/ivTitulo" />

    <Button
        android:id="@+id/btnPeluches"
        android:layout_width="245dp"
        android:layout_height="0dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/round_button"
        android:text="Peluches"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/btnRegalos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDetalles" />

    <Button
        android:id="@+id/btnRegalos"
        android:layout_width="243dp"
        android:layout_height="0dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/round_button"
        android:text="Regalos"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/btnTazas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPeluches" />

    <Button
        android:id="@+id/btnTazas"
        android:layout_width="242dp"
        android:layout_height="0dp"
        android:layout_marginBottom="130dp"
        android:background="@drawable/round_button"
        android:text="Tazas"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegalos" />

</androidx.constraintlayout.widget.ConstraintLayout>